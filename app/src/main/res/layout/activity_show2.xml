<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crop"
    tools:context=".Show2">

    <EditText
        android:id="@+id/title2"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/content2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/content2"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="10"
        android:minLines="5"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <Button
        android:id="@+id/save2"
        android:layout_width="47dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="136dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="284dp"
        android:background="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content2" />

    <Button
        android:id="@+id/delete2"
        android:layout_width="52dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="136dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="136dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="284dp"
        android:background="@android:drawable/ic_menu_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/save2"
        app:layout_constraintTop_toBottomOf="@+id/content2" />

</android.support.constraint.ConstraintLayout>